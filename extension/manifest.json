{
  "manifest_version": 3,
  "name": "Mail Scam Detector",
  "version": "1.0",
  "description": "Automatically detects scam emails in Gmail and Outlook Web using local AI.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.office.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
